<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#55000000">

    <com.ruffian.library.widget.RRelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:corner_radius="10dp"
        app:background_normal="@color/white">

        <TextView
            android:id="@+id/tv_upgrade_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="16dp"
            android:tag="beta_title"
            android:text="升级提示"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:id="@+id/view_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_upgrade_title"
            android:background="@color/v_line" />

        <TextView
            android:id="@+id/tv_upgrade_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_line1"
            android:padding="10dp"
            android:tag="beta_upgrade_info"
            android:text="info"
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_upgrade_feature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_upgrade_info"
            android:padding="10dp"
            android:tag="beta_upgrade_feature"
            android:text="feature"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <View
            android:id="@+id/view_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_upgrade_feature"
            android:background="@color/v_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_line2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_upgrade_cancel"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="beta_cancel_button"
                android:text="cancel"
                android:textStyle="bold"
                android:textSize="15sp"
                android:visibility="visible" />

            <View
                android:id="@+id/view_line3"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="@color/v_line" />

            <TextView
                android:id="@+id/tv_upgrade_confirm"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:tag="beta_confirm_button"
                android:text="confirm"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />
        </LinearLayout>
    </com.ruffian.library.widget.RRelativeLayout>
</RelativeLayout>

