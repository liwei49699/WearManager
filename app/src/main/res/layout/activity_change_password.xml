<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:background="@color/white"
    android:paddingTop="30dp"
    android:paddingRight="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_old_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入旧密码"
            android:textSize="16sp"
            android:textColor="@color/color_333333"/>

        <EditText
            android:id="@+id/et_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_old_password_title"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:maxLines="1"
            android:textSize="16sp"
            android:hint="请输入旧密码"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/v_line"
            android:layout_alignLeft="@+id/et_old_password"
            android:layout_below="@+id/et_old_password"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tv_new_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入新密码"
            android:textSize="16sp"
            android:textColor="@color/color_333333"/>

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_new_password_title"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:maxLines="1"
            android:textSize="16sp"
            android:hint="请输入新密码"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/v_line"
            android:layout_alignLeft="@+id/et_new_password"
            android:layout_below="@+id/et_new_password"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tv_confirm_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认新密码"
            android:textSize="16sp"
            android:textColor="@color/color_333333"/>

        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_confirm_password_title"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:maxLines="1"
            android:textSize="16sp"
            android:hint="请再次输入新密码"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/v_line"
            android:layout_alignLeft="@+id/et_confirm_password"
            android:layout_below="@+id/et_confirm_password"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <com.ruffian.library.widget.RTextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="确认修改"
        app:background_normal="@color/colorPrimary"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        app:corner_radius="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"/>

</LinearLayout>
