<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorPrimaryDark"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_left_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="15dp"
        android:paddingEnd="9dp"
        android:src="@drawable/ic_left_back" />

    <ImageView
        android:id="@+id/iv_left_close"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:src="@drawable/ic_close_back"
        android:layout_toEndOf="@+id/iv_left_back"/>

    <TextView
        android:id="@+id/tv_center_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:visibility="visible"
        android:text="标题"
        android:textColor="@color/color_5D5D5D"
        android:textStyle="bold"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/iv_right_more"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:layout_alignParentEnd="true"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:src="@drawable/ic_more_top"/>

    <RelativeLayout
        android:id="@+id/rl_call"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true">
        <TextView
            android:id="@+id/tv_call"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="呼叫"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="#50D9E1"/>
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_call_phone"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_call"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="8dp"/>
    </RelativeLayout>

</RelativeLayout>