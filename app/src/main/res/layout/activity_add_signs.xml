<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F1F1F1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F1F1F1"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingStart="20dp"
                android:paddingEnd="15dp"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_device_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设 备 编 号 :"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:id="@+id/et_device_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:hint="请输入设备编号"
                    android:paddingEnd="10dp"
                    android:inputType="text"
                    android:textColor="@color/tv_content"
                    android:layout_toRightOf="@+id/tv_device_number"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:gravity="end"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layerType="software"
                    android:layout_toRightOf="@+id/tv_device_number"
                    android:layout_below="@+id/et_device_number"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/color_line"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingStart="20dp"
                android:paddingEnd="15dp"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用者姓名:"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:id="@+id/et_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_user_name"
                    android:paddingEnd="10dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:textColor="@color/tv_content"
                    android:paddingStart="20dp"
                    android:maxLines="1"
                    android:gravity="end"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layerType="software"
                    android:layout_toRightOf="@+id/tv_user_name"
                    android:layout_below="@+id/et_user_name"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/color_line"/>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingStart="20dp"
                android:paddingEnd="15dp"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手    机    号:"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:id="@+id/et_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_phone_number"
                    android:paddingEnd="10dp"
                    android:maxLength="11"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:textColor="@color/tv_content"
                    android:paddingStart="20dp"
                    android:maxLines="1"
                    android:inputType="phone"
                    android:gravity="end"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layerType="software"
                    android:layout_toRightOf="@+id/tv_phone_number"
                    android:layout_below="@+id/et_phone_number"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/color_line"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="确    定"
                android:textSize="20sp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/ic_bg_login"
                android:layout_marginBottom="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/color_F1F1F1"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>

